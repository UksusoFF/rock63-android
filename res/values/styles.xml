<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="AppLightTheme" parent="Theme.Sherlock.Light">
        
        <item name="radio_logo">@drawable/vz_radio_light</item>
        <item name="radio_play">@drawable/play_light</item>
        <item name="radio_pause">@drawable/pause_light</item>
        <item name="share">@drawable/share_light</item>
    </style>
    
    <style name="AppDarkTheme" parent="Theme.Sherlock">
        
        <item name="radio_logo">@drawable/vz_radio_dark</item>
        <item name="radio_play">@drawable/play_dark</item>
        <item name="radio_pause">@drawable/pause_dark</item>
        <item name="share">@drawable/share_dark</item>
    </style>

</resources>