<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".EventDetailActivity">  

	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingBottom="10dp"
	    android:paddingLeft="20dp"
	    android:paddingRight="20dp"
	    android:paddingTop="10dp" >
	
	    <TextView
	        android:id="@+id/event_detail_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true"
	        android:text="Title"
	        android:textAppearance="?android:attr/textAppearanceLarge" />
	
	    <ImageView
            android:id="@+id/event_detail_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/news_medium_placeholder"
            android:layout_below="@+id/event_detail_title"
            android:layout_marginTop="5dp" />
	    
	    <TextView
	        android:id="@+id/event_detail_datentime"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/event_detail_image"
	        android:layout_marginTop="16dp"
	        android:text="Date and time"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	
	    <TextView
	        android:id="@+id/event_detail_description"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/event_detail_placeinf"
	        android:layout_below="@+id/event_detail_placeinf"
	        android:layout_marginTop="14dp"
	        android:text="Description" />
	
	    <LinearLayout
	        android:id="@+id/event_detail_placeinf"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/event_detail_datentime"
	        android:layout_below="@+id/event_detail_placename"
	        android:layout_marginTop="14dp"
	        android:orientation="vertical"
	        android:visibility="gone" >
	
	        <TextView
	            android:id="@+id/event_detail_placeaddr"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="TextView" />
	
	        <TextView
	            android:id="@+id/event_detail_placephone"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="TextView" />
	
	        <TextView
	            android:id="@+id/event_detail_placelink"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:autoLink="web"
	            android:text="TextView" />
	
	        <TextView
	            android:id="@+id/event_detail_placevklink"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:autoLink="web"
	            android:text="TextView" />

	    </LinearLayout>
	
	    <TextView
	        android:id="@+id/event_detail_placename"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/event_detail_placeinf"
	        android:layout_below="@+id/event_detail_datentime"
	        android:layout_marginTop="14dp"
	        android:layout_toLeftOf="@+id/event_detail_infdetailbtn"
	        android:text="Medium Text"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	
	    <Button
	        android:id="@+id/event_detail_infdetailbtn"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/event_detail_placename"
	        android:layout_alignBottom="@+id/event_detail_placename"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="24dp"
	        android:minHeight="24dp"
	        android:text="Show Info" />
	
	</RelativeLayout>
</ScrollView>